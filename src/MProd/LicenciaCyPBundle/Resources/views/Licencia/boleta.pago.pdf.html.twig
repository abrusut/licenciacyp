    <style>
      .titulo_aplicativo {
        color: #108a97;
      }
      .table {
        border-collapse: collapse;
        width: 100%;
      }

      .table-con-borde {
        border-collapse: collapse;
        width: 100%;
        border: 1px solid black;
      }

      .th-con-borde-titulo,
      .td-con-borde-titulo {
        padding: 15px;
        text-align: center;
        color: white;
        border: 1px solid black;
        background-color: gray;
      }
      .th-con-borde-subtitulo,
      .td-con-borde-subtitulo {
        text-align: center;

        border: 1px solid black;
        padding: 15px;
      }
      .th-con-borde-titulo-left,
      .td-con-borde-titulo-left {
        padding: 15px;
        text-align: left;
