{% extends "MProdLicenciaCyPBundle:Page:index.html.twig" %}

{% block nuevoybarradebusquedas %}
{% endblock %}
{% block styles %}
     <!-- Le styles -->
        <link href="{{ asset('bundles/petkoparacrudgenerator/css/bootstrap.min.css') }}" rel="stylesheet">    
        <link href="{{ asset('css/ajustesPetkoparaStg.css') }}" rel="stylesheet">    
{% endblock %}

{% block javascriptsIncludes %} 
        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    <script src="{{ asset('bundles/petkoparacrudgenerator/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/petkoparacrudgenerator/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/petkoparacrudgenerator/js/petkopara-crud-generator.js') }}"></script>
     
{% endblock %} 

{% block title %}
Persona
{% endblock %}

{% block cuerpo %}
{% block body %}

<div  class="row">
    <div class="page-header">
        <h2>View persona <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ persona.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ persona.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Apellido</strong></p>
        <p>
            {{ persona.apellido }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechanacimiento</strong></p>
        <p>
            {% if persona.fechaNacimiento %}{{ persona.fechaNacimiento|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Domiciliocalle</strong></p>
        <p>
            {{ persona.domicilioCalle }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Domicilionumero</strong></p>
        <p>
            {{ persona.domicilioNumero }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Localidadotraprovincia</strong></p>
        <p>
            {{ persona.localidadOtraProvincia }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerodocumento</strong></p>
        <p>
            {{ persona.numeroDocumento }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Sexo</strong></p>
        <p>
            {{ persona.sexo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Jubilado</strong></p>
        <p>
            {% if persona.jubilado %}Yes{% else %}No{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Telefono</strong></p>
        <p>
            {{ persona.telefono }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Email</strong></p>
        <p>
            {{ persona.email }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Createdat</strong></p>
        <p>
            {% if persona.createdAt %}{{ persona.createdAt|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('persona') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('persona_edit', { 'id':  persona.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('persona_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('persona_delete', { 'id': persona.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>
{% endblock %}
{% endblock %}

