                            <th>{{macros.th_sortable('diasVigencia',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'tipolicencia')}}</th>
                           {#   Habilitar para configurar recargos
                             <th>{{macros.th_sortable('diasPrimerVencimiento',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'tipolicencia')}}</th>
                            <th>{{macros.th_sortable('diasSegundoVencimiento',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'tipolicencia')}}</th>
                            #}
                            <th>{{macros.th_sortable('fechaTope',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'tipolicencia')}}</th>
                            <th>{{macros.th_sortable('isActive',app.request.get('pcg_sort_col'), app.request.get('pcg_sort_order') , 'tipolicencia')}}</th>
